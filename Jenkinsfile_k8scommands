pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            some-label: some-label-value
        spec:
          containers:
          - name: ubuntu
            image: ubuntu
            
    } //end of kubernetes
  } // end of agent
  stages {
    stage('k8s commands') {
      steps {
        container('ubuntu') {
          sh 'java -version'
        } // end of container
        
        } // end of steps
      } // end of stage
    } // end of stages
  } // end of pipeline

