pipeline{
  agent{
    kubernetes{
       yaml '''
         apiVersion: v1
         kind: Pod
         metadata:
          labels:
           some-label: some-label-value
         spec:
           containers:
           - name: ubuntu
             image: ubuntu
             command:
             - cat
             tty: true
        '''    
    }  // end of kubernetes
  }  // end of agent
    stages {
        stage('Run ubuntu'){
          steps{    
            container('ubuntu'){
                sh 'll'
            } // end of container 
        } // end of steps
    }  // end of stage    
    } //end of stages    
} // end of pipeline

